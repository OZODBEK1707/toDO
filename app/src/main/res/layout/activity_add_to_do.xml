<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    tools:context=".activities.AddToDo"
    android:layout_height="match_parent"
    android:scrollbarSize="0dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/edt_to_do_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background = "@drawable/edt_backgr"
            android:hint="Name"
            android:padding="@dimen/_9sdp"
            android:textSize="@dimen/_18ssp" />


        <EditText
            android:id="@+id/edt_to_do_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/edt_backgr"
            android:padding="@dimen/_9sdp"
            android:textSize="@dimen/_18ssp"
            android:hint="Description" />

        <Spinner
            android:id="@+id/spiner_add_to_do"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/edt_backgr"
            android:padding="@dimen/_9sdp"
            android:textSize="@dimen/_18ssp"
            />

        <EditText
            android:id="@+id/edt_to_do_create_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/edt_backgr"
            android:padding="@dimen/_9sdp"
            android:textSize="@dimen/_18ssp"
            android:inputType="date"
            android:hint="Create Data time" />

        <EditText
            android:inputType="date"
            android:id="@+id/edt_dedline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@drawable/edt_backgr"
            android:padding="@dimen/_9sdp"
            android:textSize="@dimen/_18ssp"
            android:hint="Killed time" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_save_add_to_do"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_49sdp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_21sdp"
            android:backgroundTint="#D93BC9"
            android:text="save"
            android:textAllCaps="false"
            android:textSize="@dimen/_13ssp" />

    </LinearLayout>
</ScrollView>